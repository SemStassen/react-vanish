{
  "name": "react-vanish",
  "version": "1.0.0",
  "description": "The reverse paywall. Make your content vanish.",
  "type": "module",
  "scripts": {
    "build": "tsup src/index.tsx --format cjs,esm --dts",
    "prepublishOnly": "npm run build"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "@types/react": "^18.0.0 || ^19.0.0",
    "typescript": "^5"
  },
  "devDependencies": {
    "tsup": "^8.4.0"
  }
}
